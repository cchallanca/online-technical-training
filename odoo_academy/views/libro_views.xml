<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <data>
        <record model="ir.ui.view" id="libro_view_form">
            <field name="name">academy.libro.form</field>
            <field name="model">academy.libro</field>
            <field name="arch" type="xml">
                <form string="Libro Form">
                    <sheet>
                        <h1><field name="name"/></h1>
                        <group>
                            <group>
                                <field name="isbn"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="active"/>
                            </group>
                            <group>
                                <field name="date_publish"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="abstract"/>
                            </group>
                            <group>
                                <field name="author_ids"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Nota">
                                <field name="nota"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record model="ir.ui.view" id="libro_view_list">
            <field name="name">academy.libro.list</field>
            <field name="model">academy.libro</field>
            <field name="arch" type="xml">
                <tree string="Libro List">
                    <field name="isbn"/>
                    <field name="name"/>
                    <field name="date_publish"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.ui.view" id="libro_view_search">
            <field name="name">academy.libro.search</field>
            <field name="model">academy.libro</field>
            <field name="arch" type="xml">
                <search>
                    <field name="author_ids"/>
                    <field name="isbn"/>
                </search>
            </field>
        </record>
    </data>
</odoo>